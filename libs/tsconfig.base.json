{
    "compilerOptions": {
        "target": "ES2020",
        "module": "ESNext",
        "moduleResolution": "node",
        "strict": true,
        "declaration": true,
        "noImplicitOverride": true,
        "noUnusedLocals": true,
        "esModuleInterop": true,
        "useUnknownInCatchVariables": false
    },
    "exclude": [
        "node_modules",
        "**/*.spec.ts"
    ]
}